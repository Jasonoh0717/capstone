    name: "profile_create"

    GridLayout:
        cols:1
        spacing: 10

        Label:
            text: "Enter your information to create a profile! (* Required fields)"


        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Username*: "

            TextInput:
                id: usnm
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Password*: "

            TextInput:
                id: passw
                multiline: False
                password: True


        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Confirm Password*: "

            TextInput:
                id: passw2
                multiline: False
                password: True

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "First Name*: "

            TextInput:
                id: first_name
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Last Name*: "

            TextInput:
                id: last_name
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Zip Code*: "

            TextInput:
                id: zip_code
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Date of Birth*: "

            TextInput:
                id: date_of_birth
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Email*: "

            TextInput:
                id: email
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Interests: "

            TextInput:
