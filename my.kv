        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Username: "

            Label:
                id: usnm
                text: ""




        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "First name: "

            Label:
                id: first_name


        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Lastname: "

            Label:
                id: last_name


        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Zip Code: "

            Label:
                id: zip_code
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Date of Birth: "

            Label:
                id: date_of_birth
                multiline: False

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Email: "

            Label:
                id: email

        GridLayout:
            cols: 2
            padding: 0

            Label:
                text: "Interests: "

            Label:
